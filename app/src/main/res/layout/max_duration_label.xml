<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing.16"
    android:layout_marginRight="@dimen/spacing.16"
    app:cardBackgroundColor="@color/cardBackgroundDark"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/spacing.16"
        android:layout_marginRight="@dimen/spacing.16"
        android:gravity="end|center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_recording_length"/>

        <TextView
            android:id="@+id/label_max_recording_duration"
            style="@style/Heading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 Sec"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
