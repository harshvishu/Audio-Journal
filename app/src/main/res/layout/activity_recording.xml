<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_recording"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.brotherpowers.audiojournal.View.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/spacing.16">

        <com.brotherpowers.hvprogressview.ProgressView
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:drawable="@drawable/ic_knob"
            app:progressColor="#DF703F"
            android:padding="@dimen/spacing.16"
            app:progressWidth="8dp"
            app:textSize="18sp"/>

    </com.brotherpowers.audiojournal.View.SquareLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@id/action.capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:tint="#fff"
        app:backgroundTint="@color/colorAccent"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/ic_mic"/>

</RelativeLayout>
