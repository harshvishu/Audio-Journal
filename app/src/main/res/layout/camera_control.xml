<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/control"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@id/action.flash"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing.20"
            android:contentDescription="@string/flash"
            app:srcCompat="@drawable/ic_flash_auto"/>

        <ImageButton
            android:id="@+id/take_picture"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/camera_default"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing.20"
            android:contentDescription="@string/picture"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@id/action.switch_camera"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/flash"
            app:srcCompat="@drawable/ic_switch_camera"/>

        <com.wefika.horizontalpicker.HorizontalPicker
            android:id="@+id/color_mode_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="2"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/primaryTextDark"
            android:textSize="16sp"
            app:sideItems="1"/>
    </LinearLayout>

</LinearLayout>