<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackgroundDark"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/label_reminder_header_current_time"
        style="@style/TextAppearance.AppCompat.Display2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="09:23"/>

    <TextView
        android:id="@+id/label_reminder_header_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing.4"
        android:layout_marginStart="@dimen/spacing.4"
        tools:text="PM"/>
</LinearLayout>