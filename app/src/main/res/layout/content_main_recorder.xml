<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="end|bottom"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginBottom="@dimen/spacing.8"
    android:layout_marginLeft="@dimen/spacing.8"
    android:layout_marginRight="@dimen/spacing.8"
    android:layout_marginTop="@dimen/spacing.8"
    android:background="@color/colorPrimary"
    android:minHeight="300dp"
    android:orientation="vertical">

    <com.brotherpowers.hvprogressview.ProgressView
        android:id="@+id/progress_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|center_horizontal"
        app:progressColor="#F7CF2D"
        app:progressWidth="10dp"
        app:textColor="#FFF"
        app:textSize="36sp"/>

    <include layout="@layout/data_counters"/>
</LinearLayout>