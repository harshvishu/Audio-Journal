<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@android:color/transparent"
             android:clipChildren="true"
             android:clipToPadding="true">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing.8"
        android:layout_marginRight="@dimen/spacing.8"
        app:cardBackgroundColor="@color/card_color_alpha"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@id/label.text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:lines="1"
                android:text="Mon, 21 Nov 2016 12:44 AM"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">


                <android.support.v7.widget.AppCompatImageButton
                    android:id="@id/action.play"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="@dimen/button_56"
                    android:layout_height="@dimen/button_56"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/colorAccent"
                    app:srcCompat="@drawable/ic_play"/>

                <com.brotherpowers.waveformview.WaveformView
                    android:id="@id/wave_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:layout_toEndOf="@id/action.play"
                    android:layout_toRightOf="@id/action.play"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.DropDownItem"
                    app:pointerColor="#397AB0"
                    app:waveFillColor="#b7b7b7"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/spacing.20"
                android:layout_marginStart="@dimen/spacing.20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageButton
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="@dimen/button_32"
                    android:layout_height="@dimen/button_32"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/notes"
                    android:tint="@color/edit_buttons"
                    app:srcCompat="@drawable/ic_mode_edit"/>

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@id/action.camera"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="@dimen/button_32"
                    android:layout_height="@dimen/button_32"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/photos"
                    android:tint="@color/edit_buttons"
                    app:srcCompat="@drawable/ic_camera"/>

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@id/action.reminder"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="@dimen/button_32"
                    android:layout_height="@dimen/button_32"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/share"
                    android:tint="@color/edit_buttons"
                    app:srcCompat="@drawable/ic_timer"/>

                <android.support.v7.widget.AppCompatImageButton
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="@dimen/button_32"
                    android:layout_height="@dimen/button_32"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/share"
                    android:tint="@color/edit_buttons"
                    app:srcCompat="@drawable/ic_share"/>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_internal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="@dimen/spacing.20"
                android:layout_marginRight="@dimen/spacing.20"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>
