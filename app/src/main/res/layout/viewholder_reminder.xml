<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardBackgroundDark"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:layout_marginEnd="@dimen/spacing.16"
        android:layout_marginLeft="@dimen/spacing.16"
        android:layout_marginRight="@dimen/spacing.16"
        android:layout_marginStart="@dimen/spacing.16"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_reminder_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                tools:text="Sun, 23 Apr In 3 days"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_reminder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="09:25"/>

                <TextView
                    android:id="@+id/label_reminder_time_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing.4"
                    android:layout_marginStart="@dimen/spacing.4"
                    tools:text="PM"/>
            </LinearLayout>

        </LinearLayout>

        <Switch
            android:id="@+id/switch_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:textColor="#FFF"
            tools:checked="true"/>
    </FrameLayout>

</android.support.v7.widget.CardView>
