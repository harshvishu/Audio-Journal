<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/selection_gray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/spacing.20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:weightSum="4">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_equalizer_white"
        android:gravity="center"
        android:text="99.50"
        android:textAppearance="@style/DataCounterTextAppearance"/>


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#fff"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_create_white"
        android:gravity="center"
        android:text="127"
        android:textAppearance="@style/DataCounterTextAppearance"/>


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#fff"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_photo_library_white"
        android:gravity="center"
        android:text="700"
        android:textAppearance="@style/DataCounterTextAppearance"/>


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#fff"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_alarm_white"
        android:gravity="center"
        android:text="11"
        android:textAppearance="@style/DataCounterTextAppearance"/>

</LinearLayout>